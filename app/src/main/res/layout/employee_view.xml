<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="0dip"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/employee_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/employee_ManagerID"
        android:layout_toRightOf="@+id/employee_ID"
        android:layout_toEndOf="@+id/employee_ID" />

    <TextView
        android:id="@+id/employee_Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employee_Name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/employee_ID"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/employee_ManagerID"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/employee_ID"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/employee_ID"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/employee_role"
        android:layout_alignBottom="@+id/employee_Email"
        android:layout_alignParentRight="true"/>


</RelativeLayout>